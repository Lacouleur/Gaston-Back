{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    .title-div { margin: 1em auto; max-width: 800px; width: 95%; font: 25px/1.5 sans-serif; text-align: center; }

    .p-div {margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; padding-bottom: 2em;  font-style: italic; text-align: center;}

    .style-div { margin-top: 150px;  background: rgb(255, 250, 248); padding: 2px 6px; text-align: center; }

    .btn {margin: 1em auto; padding: 10px; width: 15%;  text-align: center; border-radius: 15px;}

    img { width: 200px; height: 200px;}
</style>

<body class="style-div">
    <img src=" {{ asset ( 'uploads/pictures/logo-black.png' ) }} " alt="logo">
    
   

    {% if not app.user %}
    <h1 class="title-div">Hello</h1>
    <p class="p-div"> Veuillez vous connecter pour continuer. </p>
    <a href="{{ path('app_login') }}" class="btn btn-dark">Connexion</a>
    {% endif %}
    {% if app.user %}
    <h1>✅</h1>
    <p class="p-div"> Vous êtes maintenant connecté. </p>
        <a href="{{ path('easyadmin') }}" class="btn btn-dark">Go Admin</a>
    {% endif %}
</body>
{% endblock %}
