{% extends 'base.html.twig' %}

{% block title %}Visibility index{% endblock %}

{% block body %}
    <h1>Visibility index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visibility in visibilities %}
            <tr>
                <td>{{ visibility.id }}</td>
                <td>{{ visibility.label }}</td>
                <td>{{ visibility.createdAt ? visibility.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ visibility.updatedAt ? visibility.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('visibility_show', {'id': visibility.id}) }}">show</a>
                    <a href="{{ path('visibility_edit', {'id': visibility.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('visibility_new') }}">Create new</a>
{% endblock %}
