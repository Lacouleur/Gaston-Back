{% extends 'base.html.twig' %}

{% block title %}Visibility{% endblock %}

{% block body %}
    <h1>Visibility</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visibility.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ visibility.label }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
